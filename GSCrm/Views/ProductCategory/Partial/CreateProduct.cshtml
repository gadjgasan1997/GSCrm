@inject ResManager resManager
@using static GSCrm.CommonConsts

@* // Модальное окно создания продукта *@
<div id="addProductModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="@PRODUCT" asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title">@resManager.GetString("NewProduct")</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input id="createProdName" class="form-control" type="text" placeholder="@resManager.GetString("NameLabel")" />
                        <ul id="createProdNameError" data-connect-el="createProdName" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="form-group">
                        <textarea id="createProdDesc" class="form-control" type="text" placeholder="@resManager.GetString("Description")"></textarea>
                        <ul id="createProdDescError" data-connect-el="createProdDesc" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="form-group">
                        <input id="createProdCost" class="form-control" type="number" placeholder="@resManager.GetString("Cost")" />
                        <ul id="createProdCostError" data-connect-el="createProdCost" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="createProdBtn" type="button" class="btn btn-primary" value="@resManager.GetString("CreateLabel")" />
                    <input id="cancelCreationProdBtn" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
                </div>
            </form>
        </div>
    </div>
</div>