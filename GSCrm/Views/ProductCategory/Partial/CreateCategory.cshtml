@inject ResManager resManager
@using static GSCrm.CommonConsts

@* // Модальное окно создания категории *@
<div id="addCategoryModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="@PROD_CAT" asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title">@resManager.GetString("NewProductCategory")</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input id="createProdCatName" class="form-control" type="text" placeholder="@resManager.GetString("NameLabel")" />
                        <ul id="createProdCatNameError" data-connect-el="createProdCatName" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                    <div class="form-group">
                        <textarea id="createProdCatDesc" class="form-control" type="text" placeholder="@resManager.GetString("Description")"></textarea>
                        <ul id="createProdCatDescError" data-connect-el="createProdCatDesc" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="createProdCatBtn" type="button" class="btn btn-primary" value="@resManager.GetString("CreateLabel")" />
                    <input id="cancelCreationProdCatBtn" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
                </div>
            </form>
        </div>
    </div>
</div>