@{
    Layout = "_Layout";
}
@using static GSCrm.CommonConsts
@using GSCrm.Data.ApplicationInfo
@using GSCrm.Helpers
@using GSCrm.Data
@inject ApplicationDbContext context
@inject ResManager resManager
@using GSCrm.Data.Cash
@inject ICachService cachService
@model ProductCategoryViewModel
@{
    User currentUser = User.GetUserModel(context);
    ViewInfo prodCatView = cachService.GetViewInfo(currentUser.Id, PROD_CATS);
}

@* // Хлебные крошки *@
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@resManager.GetString("Home")</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="Root" asp-action="@ORGANIZATIONS" asp-route-pageNumber="@prodCatView.CurrentPageNumber">
                @resManager.GetString(ORGANIZATIONS)
            </a>
        </li>
    </ol>
</nav>

<div id="prodCatForm" class="container mt-5 has-no-permissions-form">
    <div class="row justify-content-around">
        <div class="col">
            <img src="~/img/default-empty.svg" />
        </div>
        <div class="col">
            <div class="block-center">
                <p class="label-lg">@resManager.GetString("HasPermissionsForSeeProdCat")</p>
            </div>
        </div>
    </div>
</div>