@inject ResManager resManager
@model AccountViewModel
@using static GSCrm.CommonConsts

<div id="addAccountManagerModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@resManager.GetString("NewKM")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="@ACCOUNT" asp-action="UnlockAccount">
                    <input asp-for="Id" hidden="hidden" />
                    <div class="mt-3">
                        <input id="accManagerId" hidden="hidden" />
                        <div id="accManager" class="select-autocomplete" data-link="@Url.Content($"~/Autocomplite/GetOrgEmployeesByInitials/{Model.OrganizationId}/")"
                             data-autocomplite-type="Accounts" data-autocomplite-name="AccountManager">
                            <input id="accManagerVal" class="form-control" placeholder="@resManager.GetString("AccountManager")" />
                        </div>
                    </div>
                    <ul id="accManagerError" data-connect-el="accManagerVal" class="d-none under-field-error label-sm mt-2"></ul>
                </form>
            </div>
            <div class="modal-footer">
                <input id="addAccManager" type="submit" class="btn btn-primary" value="@resManager.GetString("Change")" />
                <input id="cancelAddAccManager" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
            </div>
        </div>
    </div>
</div>
