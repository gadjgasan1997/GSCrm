@inject ResManager resManager
@model EmployeeViewModel
@using static GSCrm.CommonConsts

@* // Модальное окно изменения подразделения *@
<div id="changeEmployeeDivisionModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@resManager.GetString("NewDivisionAndPosition")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Employee" asp-action="ChangeDivision">
                    <div class="form-group">
                        <div class="mt-3">
                            <div id="empNewDiv" class="select-autocomplete flex-grow-1" data-link="@Url.Content($"~/Autocomplite/GetDivisionsExceptCurrent/{Model.OrganizationId}/{Model.DivisionId}/")">
                                <input id="empNewDivInput" class="form-control" placeholder="@resManager.GetString("NewDivision")" />
                            </div>
                        </div>
                        <ul id="empNewDivError" data-connect-el="empNewDivInput" class="d-none under-field-error label-sm mt-2"></ul>

                        <div class="mt-4">
                            <div id="empNewPrimaryPos" class="select-autocomplete flex-grow-1" data-link="@Url.Content($"~/Autocomplite/GetPositions/{Model.OrganizationId}/")"
                                 data-autocomplite-type="Positions" data-autocomplite-name="EmpNewPrimaryPos">
                                <input id="empNewPrimaryPosInput" class="form-control" placeholder="@resManager.GetString("NewPosition")" />
                            </div>
                        </div>
                        <ul id="empNewPrimaryPosError" data-connect-el="empNewPrimaryPosInput" class="d-none under-field-error label-sm mt-2"></ul>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input id="changeDivisionBtn" type="submit" class="btn btn-primary" value="@resManager.GetString("ChangeLabel")" />
                <input id="cancelChangeDivisionBtn" type="button" class="btn btn-secondary" data-dismiss="modal" value="@resManager.GetString("CancelLabel")" />
            </div>
        </div>
    </div>
</div>