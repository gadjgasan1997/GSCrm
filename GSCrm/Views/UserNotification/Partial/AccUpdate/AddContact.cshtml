@using GSCrm.Data
@using GSCrm.Helpers
@using GSCrm.Data.ApplicationInfo
@using GSCrm.Models.ViewModels.Notifications.AccUpdate
@using static GSCrm.CommonConsts
@inject ApplicationDbContext context
@inject ResManager resManager
@inject IViewsInfo viewsInfo
@model AddContactNotViewModel

<p class="label-non-select label-md m-0 text-center">
    У клиента <a href="/@ACCOUNT/@Model.ChangedAccount.Id">@Model.ChangedAccount.Name</a>, с которым вы работаете, был добавлен новый контакт со следующими данными:
</p>
<ul class="mt-2 mb-0">
    <li>
        <p class="label-non-select label-sm m-0">
            Тип: @Model.NewAccountContact.ContactType.ToLocalString()
        </p>
    </li>
    <li>
        <p class="label-non-select label-sm m-0">
            ФИО: @Model.NewAccountContact.GetFullName()
        </p>
    </li>
    <li>
        <p class="label-non-select label-sm m-0">
            Почта: @Model.NewAccountContact.Email
        </p>
    </li>
    <li>
        <p class="label-non-select label-sm m-0">
            Номер телефона: @Model.NewAccountContact.PhoneNumber
        </p>
    </li>
</ul>
<p class="label-non-select label-md m-0 text-center">
    Организация: <a href="/@ORGANIZATION/@Model.OwnerOrg.Id">@Model.OwnerOrg.Name</a>
</p>